{
    "Comment": "Access keys rotation workflow",
    "StartAt": "Get Expired Keys",
    "States": {
        "Get Expired Keys": {
            "Type": "Parallel",
            "End": true,
            "Branches": [
                {
                    "StartAt": "GetEmployeeKeys",
                    "States": {
                        "GetEmployeeKeys": {
                            "Type": "Task",
                            "Resource": "${get_epired_keys}",
                            "Parameters": {
                                "UserPath": "/employees/",
                                "KeyAge": 1
                            },
                            "End": true
                        }
                    }
                },
                {
                    "StartAt": "GetServiceAccountsKey",
                    "States": {
                        "GetServiceAccountsKey": {
                            "Type": "Task",
                            "Resource": "${get_epired_keys}",
                            "Parameters": {
                                "UserPath": "/service-accounts/",
                                "KeyAge": 1
                            },
                            "End": true
                        }
                    }
                }
            ]
        }
    }
}